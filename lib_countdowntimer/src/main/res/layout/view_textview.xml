<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/below_tens_pos_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/top_tens_pos_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hours_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/below_unit_pos_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/top_unit_pos_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/colon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:includeFontPadding="false"
            android:text=" : "
            android:textSize="40dp"
            android:typeface="serif" />

        <LinearLayout
            android:id="@+id/minute_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/below_tens_pos_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="8" />

                <TextView
                    android:id="@+id/top_tens_pos_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/below_unit_pos_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/top_unit_pos_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/colon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:includeFontPadding="false"
            android:text=" : "
            android:textSize="40dp"
            android:typeface="serif" />

        <LinearLayout
            android:id="@+id/second_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/below_tens_pos_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/top_tens_pos_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/below_unit_pos_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

                <TextView

                    android:id="@+id/top_unit_pos_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:textSize="40dp"
                    tools:text="0" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
